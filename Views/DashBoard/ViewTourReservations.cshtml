@model IEnumerable<UserReservationDetails>
@{
    Layout = "_DashBoard";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>User Reservations table</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center justify-content-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">User Name</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Tour Name</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Distination</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Total Tickets</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Payment Method</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach ( var item in Model ) {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2">
                                                <div class="my-auto">
                                                    <h6 class="mb-0 text-sm">@item.FirstName @item.LastName</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-xs font-weight-bold">@item.tour.Name</span>
                                        </td>
                                        <td>
                                            <span class="text-xs font-weight-bold">@item.tour.Distination</span>
                                        </td>
                                        <td>
                                            @{
                                                var totalTickets = item.AdultTickets + item.ChildTickets + item.InfantTickets;
                                            }
                                            <span class="text-xs font-weight-bold">@totalTickets</span>
                                        </td>
                                        <td>
                                            @if(item.PaymentMethod == 1 ) {
                                                <span class="text-xs font-weight-bold">Cash</span>
                                            } else {
                                                <span class="text-xs font-weight-bold">Visa</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="ViewTourReserved" asp-route-id="@item.ID" class="btn btn-secondary" role="button">
                                                <span class="material-symbols-outlined"> View </span>
                                            </a>
                                            <a asp-action="DeleteReservation" asp-route-id="@item.ID" class="btn btn-danger" role="button">
                                                <span class="material-symbols-outlined"> Cancel Reservation </span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>  
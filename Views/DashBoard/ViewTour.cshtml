@{
    Layout = "_DashBoard";
}
@model Tour


<div class="container py-4">
    <div class="card m-5" style="width: 1000px">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Url.Action("GetImage", "DashBoard", new { id = Model.ID })" alt="Tour Image" style="max-width: 100%; height: auto;" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">@Model.Distination</h6>
                    <h6 class="card-subtitle mb-2 text-body-secondary">Price: @Model.Price</h6>
                    <p class="card-text">@Model.Description</p>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col">Start Date:<span style="margin: 0 0 0 10px;font-weight: bolder; color: rgb(74, 74, 74);">@Model.StartDate</span></div>
                                <div class="col">Start Date:<span style="margin: 0 0 0 10px;font-weight: bolder; color: rgb(74, 74, 74);">@Model.EndDate</span></div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col">Hotel Name:<span style="margin: 0 0 0 10px;font-weight: bolder; color: rgb(74, 74, 74);">@Model.HotelName</span></div>
                                <div class="col">Meals:<span style="margin: 0 0 0 10px;font-weight: bolder; color: rgb(74, 74, 74);">@Model.Meals</span></div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col">Guide Service:<span style="margin: 0 0 0 10px;font-weight: bolder; color: rgb(74, 74, 74);">@Model.GuideIncluded</span></div>
                                <div class="col">Adults Tickets:<span style="margin: 0 0 0 10px;font-weight: bolder; color: rgb(74, 74, 74);">@Model.AdultsTickets</span></div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col">Children Tickets:<span style="margin: 0 0 0 10px;font-weight: bolder; color: rgb(74, 74, 74);">@Model.ChildrenTickets</span></div>
                                <div class="col">Infant Tickets:<span style="margin: 0 0 0 10px;font-weight: bolder; color: rgb(74, 74, 74);">@Model.InfantTickets</span></div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col">Transportation: @Model.TransportationType.Name</div>
                                <div class="col">Status: <span class="text-uppercase fw-bolder" style="color: #fa8b02; margin: 0 0 0 20px"> In Process </span></div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
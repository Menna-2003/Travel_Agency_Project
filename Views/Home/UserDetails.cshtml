@{
    Layout = "_Layout";
}


<a  asp-action="BookingDetails"  class="backBtn w-25 container text-decoration-none">
    <i class="fa-solid fa-arrow-left" style="color: #b0b0b0"></i>
    <span>Back</span>
</a>
<div class="progress w-50 h-auto m-1">
    <div class="progress-bar" role="progressbar" style="width: 50%; background-color: #fa8b02; height: 5px" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<div class="buttons mt-5 mb-5">
    <div class="one">1</div>
    <div class="two">2</div>
    <div class="three">3</div>
</div>

<div class="container left_container d-grid justify-content-start mb-5">
    <h4 class="mb-5">Who shall we send these tickets to?</h4>
    <form action="">
        <div class="container">
            <div class="row gap-lg-5 gap-sm-2">
                <div class="col">
                    <label for="fname" class="d-block">First Name</label>
                    <input class="mt-4 mb-4 inputElement" type="text" id="fname" name="fname" placeholder="Enter your First Name" />
                </div>
                <div class="col">
                    <label for="lname" class="d-block">Last Name</label>
                    <input class="mt-4 mb-4 inputElement" type="text" id="lname" name="lname" placeholder="Enter your Last Name" />
                </div>
            </div>
            <div class="row gap-lg-5 gap-sm-2">
                <div class="col">
                    <label for="telephone" class="d-block">Telephone Number</label>
                    <input class="mt-4 mb-4 w-50 inputElement" type="tel" id="telephone" name="telephone" placeholder="Enter your Telephone Number" />
                </div>
            </div>
            <label for="pickupLocation" class="d-block">Select Pickup Location</label>
            <select name="pickupLocation" id="pickupLocation" width="276" class="rounded">
                <option value="">Select...</option>
                <option value="">Maadi</option>
                <option value="">6th October</option>
                <option value="">Nasr City</option>
                <option value="">Madinty</option>
                <option value=""></option>
            </select>
        </div>
    </form>
</div>

<div class="ticketOverview p-4 d-grid">
    <h3>Your Tickets Overview</h3>
    <div class="box d-flex mt-5 gap-4">
        <img src="../images/tripPic.png" alt="" srcset="" />
        <div class="text">
            <h5>Wine tasting In Tuscany</h5>
            <p><i class="fa-regular fa-calendar-days"></i>FRI, 23 DEC 2022</p>
            <p><i class="fa-regular fa-clock"></i>15:00</p>
        </div>
    </div>
    <div class="details d-grid gap-4 mt-4">
        <div class="one">
            <div class="circleCounter">2</div>
            <span>Adult (18+) (€32.00)</span>
            <span class="price">€64.00</span>
        </div>
        <div class="two">
            <div class="circleCounter">1</div>
            <span>Adult (18+) (€32.00)</span>
            <span class="price">€64.00</span>
        </div>
        <div class="three">
            <div class="circleCounter">1</div>
            <span>Adult (18+) (€32.00)</span>
            <span class="price">€64.00</span>
        </div>
        <div class="totalPrice">
            <span>Total Price</span>
            <span class="price">€86.00</span>
        </div>
    </div>
    <a class="nextStepBtnLink" asp-action="Payment"><button class="nextStepBtn w-75 mt-4">Go to the Next Step</button></a>

</div>